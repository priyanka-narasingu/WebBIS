<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.gmail.sa38.team7.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainProductDetailsServlet</servlet-name>
        <servlet-class>com.gmail.sa38.team7.MainProductDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MaintainInventoryStockServlet</servlet-name>
        <servlet-class>com.gmail.sa38.team7.MaintainInventoryStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReplenishStockServlet</servlet-name>
        <servlet-class>com.gmail.sa38.team7.ReplenishStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnquireStockSummaryServlet</servlet-name>
        <servlet-class>com.gmail.sa38.team7.EnquireStockSummaryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnquireTransactionHistoryServlet</servlet-name>
        <servlet-class>com.gmail.sa38.team7.EnquireTransactionHistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnterUsageDetailServlet</servlet-name>
        <servlet-class>com.gmail.sa38.team7.EnterUsageDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainProductDetailsServlet</servlet-name>
        <url-pattern>/MainProductDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MaintainInventoryStockServlet</servlet-name>
        <url-pattern>/MaintainInventoryStock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReplenishStockServlet</servlet-name>
        <url-pattern>/ReplenishStock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnquireStockSummaryServlet</servlet-name>
        <url-pattern>/EnquireStockSummary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnquireTransactionHistoryServlet</servlet-name>
        <url-pattern>/EnquireTransactionHistory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnterUsageDetailServlet</servlet-name>
        <url-pattern>/EnterUsageDetail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    
     <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>*.html</url-pattern>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
 
</web-app>
